<div class="row">
  <div class="col-md-8">
    <div class="panel panel-info">
      <div class="panel-heading">
          <h1><%= @post.title %></h1>
      </div>
      <div class="panel-body">
          <div>
              <b>Creado:</b> <%= @post.created_at.strftime('%F') %>
              <hr />
          </div>
          <p>
            <%= @post.content %>
          </p>
      </div>
      <div class="panel-footer">
        <%= link_to 'Editar', edit_post_path(@post), class: 'btn btn-primary' %>
        <%= link_to 'Eliminar', @post, method: 'delete', class: 'btn btn-danger', data: { confirm: "¿Estás seguro?" } %>
        <%= link_to 'Volver', posts_path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <h3>Deja tu comentario</h3>
            <%= render 'comments/form' %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <h3>Todos los comentarios</h3>
        <%= pluralize(@post.comments.count, "comentario", "comentarios" ) %>
        <ul class="comments">
          <%= render @post.comments %>
        </ul>
      </div>
    </div>
  </div>
</div>
